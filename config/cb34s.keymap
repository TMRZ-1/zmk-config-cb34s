#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define DEFAULT_L 	0
#define MAC_L	    1
#define KNEIR_L     2
#define NUMSYM_L 	3
#define NAV_L 		4
#define BLE_L 		5
#define COMFY_L		6
#define NUMBERS_L	7
#define COMMA_L	    8

// Sticky Layer Behavior - release sticky behavior after x ms
// ===========================================================================================================

/ {
    combos {
        compatible = "zmk,combos";

        // tutaj możesz dodać definicje combos
    };

    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "homerow mods";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ===========================================================================================================
        // 0 = Default

        default_layer {
            label = "Base";
            bindings = <
&kp Q           &kp W            &kp E             &kp R        &kp T      &kp Y        &kp U          &kp I              &kp O            &kp P
&hm LEFT_GUI A  &hm RIGHT_ALT S  &hm LEFT_SHIFT D  &hm LCTRL F  &kp G      &kp H        &hm RCTRL J    &hm RIGHT_SHIFT K  &hm RIGHT_ALT L  &hm RIGHT_GUI SEMICOLON
&kp Z           &kp X            &kp C             &kp V        &kp B      &kp N        &kp M          &kp COMMA          &kp DOT          &kp SLASH
                                                   &mo 1        &kp SPACE  &lt 2 ENTER  &kp BACKSPACE
            >;
        };

        // ===========================================================================================================
        // 1 = Numbers

        numbers {
            label = "num";
            bindings = <
&kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3    &kp NUMBER_4  &kp N5     &kp NUMBER_6      &kp N7             &kp N8                &kp N9  &kp N0
&kp ESC       &none         &kp LEFT_SHIFT  &none         &none      &kp MINUS         &kp EQUAL          &kp GRAVE             &none   &kp SQT
&kp TAB       &none         &none           &none         &none      &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp NON_US_BACKSLASH  &none   &none
                                            &kp LGUI      &kp SPACE  &kp RSHIFT        &kp BACKSPACE
            >;
        };

        // ===========================================================================================================
        // 2 = F-Row

        f_row {
            label = "FROW";
            bindings = <
&none           &kp UP_ARROW    &none            &none      &none      &kp F1      &kp F2   &kp F3   &kp F4   &bt BT_CLR
&kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &none      &none      &kp F5      &kp F6   &kp F7   &kp F8   &bt BT_NXT
&none           &none           &none            &none      &none      &kp F9      &kp F10  &kp F11  &kp F12  &bt BT_PRV
                                                 &kp LCTRL  &kp SPACE  &kp RSHIFT  &none
            >;
        };

        // ===========================================================================================================
        // 3 = Symbols
        // ===========================================================================================================
        // 4 = Navigation (szczegóły do uzupełnienia)
        // ===========================================================================================================
        // 5 = Bluetooth (szczegóły do uzupełnienia)
        // ===========================================================================================================
        // 6 = Comfort (szczegóły do uzupełnienia)
        // ===========================================================================================================
        // 7 = Numbers (wariant drugi, do uzupełnienia)
        // ===========================================================================================================
        // 8 = Comfort Mac (szczegóły do uzupełnienia)
    };
};
